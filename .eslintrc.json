{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jquery": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "indent": ["error", 2],
    "prefer-template": "error",
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "double",{ "allowTemplateLiterals": true }],
    "semi": ["error", "always"]
  }
}
